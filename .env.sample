# Claude Code Environment Variables
# Copy this file to ~/.claude/.env.local and set the values.

# Debug mode (1: enabled, 0: disabled)
# export DEBUG=1

# 시스템 알림 (1: 활성화, 0: 비활성화, 기본값: 1)
# macOS에서 display notification 사용
export NOTIFY_SYSTEM=0

# 사운드 알림 (1: 활성화, 0: 비활성화, 기본값: 1)
# macOS에서 afplay로 사운드 재생
export NOTIFY_SOUND=0

# ntfy.sh 푸시 알림 (https://ntfy.sh)
# iPhone/Apple Watch에서 ntfy 앱 설치 후 토픽 구독
export NTFY_TOPIC=""

# Slack Webhook URL (https://api.slack.com/messaging/webhooks)
export SLACK_WEBHOOK_URL=""

# Claude Monitor Desktop App path (empty to disable)
# Auto-launches on SessionStart if not running (e.g., ~/claude-monitor/desktop)
export CLAUDE_MONITOR_DESKTOP="${HOME}/workspace/github.com/nalbam/claude-monitor/desktop"

# Claude Monitor URL (empty to disable)
# HTTP endpoint for Desktop App (e.g., http://127.0.0.1:19280)
export CLAUDE_MONITOR_URL="http://127.0.0.1:19280"

# ESP32 status display (only sends if configured, empty to disable)
# USB Serial port (e.g., /dev/cu.usbserial-0001, /dev/ttyUSB0)
# Check with: ls /dev/cu.* or ls /dev/tty*
export ESP32_SERIAL_PORT=""
# HTTP (e.g., http://192.168.1.100)
export ESP32_HTTP_URL=""
