      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(od:*)",
      "Bash(osascript:*)",
      "Bash(pgrep:*)",
      "Bash(pip:*)",
      "Bash(pkill:*)",
      "Bash(pnpm:*)",
      "Bash(ps:*)",
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(rm:*)",
      "Bash(rsync:*)",
      "Bash(scp:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(ssh:*)",
